
<div class="container">
  <h2>Update Recipe</h2>
  <%=
    form_with model: @recipe, method: :patch, url: routes.recipes_path, local: true do
      div class: 'input' do
        label      :name
        text_field :name, class: 'form-control', placeholder: 'Name of the recipe'
      end

      div class: 'input' do
        label        :difficulty
        number_field :difficulty, class: 'form-control', placeholder: 'Difficulty out of 5'
      end

      div class: 'input' do
        label      :food_type
        text_field :food_type, class: 'form-control', placeholder: 'Type of the food'
      end

      div class: 'input' do
        label      :serving_size
        text_field :serving_size, class: 'form-control', placeholder: 'Number of people'
      end

      div class: 'input' do
        label        :duration
        number_field :duration, class: 'form-control', placeholder: 'Duration in minutes'
      end

      div class: 'input' do
        label      :ingredients
        text_area  :ingredients, class: 'form-control', placeholder: 'Please input the ingredients in bullet form'
      end

      div class: 'input' do
        label      :instructions
        text_area  :instructions, class: 'form-control', placeholder: 'Please input instructions as a numbered list'
      end

      div class: 'input' do
        label      :notes
        text_area  :notes, class: 'form-control', placeholder: 'Any interesting notes about the recipe!'
      end

      div class: 'input' do
        label      :tags
        text_field :tags, class: 'form-control', placeholder: 'Tags'
      end

      div class: 'input' do
        label      :image
        text_field :image, class: 'form-control', placeholder: 'URL of image'
      end

      div class: 'controls' do
        submit 'Update Recipe', class: 'btn btn-primary'
      end
    end
  %>
</div>