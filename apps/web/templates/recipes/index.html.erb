<h2>All Recipes</h2>

<% if recipes.any? %>
  <div id="recipes">
    <% recipes.each do |recipe| %>
      <div class="recipe">
        <h3><%= recipe.name %></h3>
        <p>Difficulty: <%= recipe.difficulty %>/5.0</p>
        <p><%= recipe.notes %></p>
      </div>
    <% end %>
  </div>
<% else %>
  <p class="placeholder">There are no recipes yet.</p>
<% end %>
<a href="/recipes/new">New recipe</a>